{
  "name": "web-terminal-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Web-based terminal application with multi-tab support",
  "scripts": {
    "dev": "concurrently \"pnpm --filter @web-terminal/server dev\" \"pnpm --filter @web-terminal/client dev\"",
    "build": "pnpm -r build",
    "build:cli": "pnpm build && pnpm --filter web-terminal build",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
